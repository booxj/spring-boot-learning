<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.security.customized.mapper.UserDao">

    <resultMap id="userMap" type="com.springboot.security.customized.domain.SysUser">
        <id property="id" column="ID"/>
        <result property="username" column="username"/>
        <result property="password" column="PASSWORD"/>
        <collection property="roles" ofType="com.springboot.security.customized.domain.SysRole">
            <result column="name" property="name"/>
        </collection>
    </resultMap>

    <select id="findByUserName" parameterType="String" resultMap="userMap">
		select u.*
		,r.name
		from sys_user u
        LEFT JOIN sys_role_user sru on u.id= sru.user_id
        LEFT JOIN sys_role r on sru.role_id=r.id
        where username= #{username}
	</select>
</mapper>